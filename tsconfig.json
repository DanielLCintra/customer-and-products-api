{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES6",                    
    "module": "commonjs",
    //"lib": ["es6"],
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": false,
    "removeComments": true, /* Specify what module code is generated. */
    "esModuleInterop": true, /* Ensure that casing is correct in imports. */
    "strict": true,
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ],
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*"
  ]
}

